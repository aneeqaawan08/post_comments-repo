<h1> All posts</h1>

<%# <%= link_to 'New post', new_post_path, method: :get %>


<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>Comments_count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= cl_image_tag(post.image.key, width: 200, height: 100, crop: :scale, effect: "cartoonify") if post.image.attached?%> </td>
        <%# <td> <%= image_tag (post.image),style:"width:50px" if post.image.attached?%></td>
        <td><%= post.comments.count%></td>
      
        <td><%= link_to 'Show', post %> </td>
        
        <td><%= link_to 'Edit', edit_post_path(post)%></td>
      
        <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>  
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
