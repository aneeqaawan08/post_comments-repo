<h2>List of all users</h2>
<html>
<table class="table table-dark table-striped">
<thead>
<tr>
    <th> name </th>
    <th> phone_no </th>
    <th> email </th>
    <th> password </th>
    <th> password_confirmation</th>
    <th> image </th>
    <th> status</th>
   
</tr>
</thead>
<tbody>

<% @users.each do|user| %>
<% if user.status == "active"%>
    <tr>
    <td> <%= user.name %></td> 
    <td> <%= user.phone_no %></td> 
    <td> <%= user.email %></td>
    <td> <%= user.password %></td>
    <td> <%= user.password_confirmation %></td>
    <td> <%= image_tag (user.image), style:"width:50px" if user.image.attached? %> </td>
    <td> <%= user.status %></td>
   
    <%# <td><button class="btn btn-danger" type="button" users_approve_path>Approve</button></td> %>
    </tr>
    <%end%>
    <%end%>
    
    </tbody>
    </table>
</html>

