<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>


  <div class= "mb-3">
    <div class="form-label"><%= f.label :name  %></div>
    <%= f.text_field :name,  autofocus: true, autocomplete: "name" %>
  </div>

  <div class= "mb-3">
  <div class="form-label"><%= f.label :phone_no %> </div>
  <%= f.number_field :phone_no, autofocus: true, autocomplete: "phone_no" %>
  </div>

  <div class= "mb-3">
  <div class="form-label"> <%= f.label :email %></div>
  <%=f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class= "mb-3">
  <div class="form-label"><%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <%end%></div>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class= "mb-3">
    <div class="form-label"><%= f.label :password_confirmation %><br/></div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

    <div class= "mb-3">
     <div class="form-label"><%= f.label :image %><br/></div>
   <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
  </div>

<br>

  <%# <div class="actions"> %>
    <%# <%= f.submit "Sign up" %> <button type="submit" class="btn btn-primary">Submit</button>
  <%# </div> %>
<% end %>

